                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:text="Encontrar alojamiento"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cardMarginVertical"
                    android:layout_marginLeft="@dimen/cardMarginHorizontal"
                    android:layout_marginRight="@dimen/cardMarginHorizontal"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/colorLightPrimary"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="14dp"
                            android:padding="6dp"
                            android:src="@drawable/food_fork_drink"
                            android:tint="@color/colorPrimaryDark" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="80dp"
                            android:paddingRight="20dp"
                            android:paddingTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Menú"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:text="Gambón a la Plancha
Lenguado Relleno de Marisco
Carrilleras Ibéricas al Pedro Ximénez
Tarta Nupcial + Helado
Café y Licores"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="14dp"
                                android:gravity="center_vertical"
                                android:text="Bodega"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:text="Vino Blanco, Vino Tinto Crianza, Cava"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/colorDivider" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/corner_decoration_top_right"
                            android:tint="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:src="@drawable/corner_decoration_bottom_right"
                            android:tint="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:src="@drawable/corner_decoration_bottom_left"
                            android:tint="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|top"
                            android:src="@drawable/corner_decoration_top_left"
                            android:tint="@color/colorPrimaryDark" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cardMarginVertical"
                    android:layout_marginLeft="@dimen/cardMarginHorizontal"
                    android:layout_marginRight="@dimen/cardMarginHorizontal"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/colorLightPrimary"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorLightPrimary"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="14dp"
                                android:padding="6dp"
                                android:src="@drawable/ic_table"
                                android:tint="@color/colorPrimaryDark" />


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_gravity="top|left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:padding="6dp"
                                android:tint="@color/colorPrimary" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/corner_decoration_top_right"
                                android:tint="@color/colorPrimaryDark" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:src="@drawable/corner_decoration_bottom_right"
                                android:tint="@color/colorPrimaryDark" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|bottom"
                                android:src="@drawable/corner_decoration_bottom_left"
                                android:tint="@color/colorPrimaryDark" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|top"
                                android:src="@drawable/corner_decoration_top_left"
                                android:tint="@color/colorPrimaryDark" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingLeft="80dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="Mi mesa: Mesa 7"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center_vertical"
                                    android:text="Javier Contreras\nIsabel Oviedo\nIgnacio Diaz\nMarta Ariza\nJose Luis Hernández\nGonzalo Moreno\nCarlos Roig\nMaría del Mar García"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff" />

                        <Button
                            android:id="@+id/bt_all_tables"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:text="Ver todas las mesas"
                            android:textColor="@color/colorPrimaryText" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cardMarginVertical"
                    android:layout_marginLeft="@dimen/cardMarginHorizontal"
                    android:layout_marginRight="@dimen/cardMarginHorizontal"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/colorLightPrimary"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="14dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_bus"
                                android:tint="@color/colorPrimaryDark" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingLeft="80dp"
                                android:paddingRight="20dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="Autobús"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center_vertical"
                                    android:text="IDA:\n12:45 - Paseo de la independencia, 34\n\nVUELTA:\n20:00\n21:00\n22:00"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_gravity="top|left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:padding="6dp"
                                android:tint="@color/colorPrimary" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/corner_decoration_top_right"
                                android:tint="@color/colorPrimaryDark" />

